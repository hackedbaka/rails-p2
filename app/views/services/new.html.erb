<%=render 'layouts/nav_bar'%>
<h1>Add a new service!</h1>

<%= form_for @service do |f| %>

    <div class="form-group">
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :description %></p>
        <p><%= f.text_field :description %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :picture %></p>
        <p><%= f.text_field :picture %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :price %></p>
        <p><%= f.text_field :price %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :text %></p>
        <p><%= f.text_area :text , size: "50x10" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :category_id, "category" %></p>
        <p><%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name)%></p>
    </div>
    <%if current_seller%>
    <div class="form-group">
        <%= f.hidden_field :seller_id, value: current_seller.id %>
    </div>

    <%= f.submit "Add new service!" %>
    <%else%>
        You need to be logged in to create anything
    <%end%>
<% end %>

