<%=render 'layouts/nav_bar'%>

<% if @service.seller_id == current_seller.id %>

    <h1>Edit this service!</h1>

    <%= form_for @service do |f| %>

        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description %>
        </div>

        <div class="form-group">
            <%= f.label :picture %>
            <%= f.text_field :picture %>
        </div>

        <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price %>
        </div>

        <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text %>
        </div>

        <div class="form-group">
            <%= f.label :category_id, "category" %>
            <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name)%>
        </div>

        <div class="form-group">
            <%= f.hidden_field :seller_id, value: current_seller.id %>
        </div>

        <div class="form-group">
        <%= f.submit "Submit these changes!" %>
        </div>
    <% end %>
    
<% else %>
    <h1>You are not authorized to edit this service.</h1>    
<% end %>
