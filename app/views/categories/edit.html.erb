<h1>Edit this category</h1>

<%= form_for @category do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the category list!", categories_path %>