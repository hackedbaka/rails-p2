<%=render 'layouts/nav_bar'%>
<h1> <%= @category.name %> </h1>

<p><%= @category.description %></p> 

<%= button_to "Edit this category!", edit_category_path(@category), :class => "btn btn-default", :method => :get %>

<%= button_to "Delete this category!", :category, method: :delete, data: { confirm: "Are you sure you want to delete this category?"}, :class => "btn btn-default", :method => :get %>