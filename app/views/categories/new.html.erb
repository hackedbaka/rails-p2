<%=render 'layouts/nav_bar'%>
<h1>Add a new category!</h1>

<%= form_for @category do |f| %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <%= f.submit "Add new category!" %>

<% end %>
