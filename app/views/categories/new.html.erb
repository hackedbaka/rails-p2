<%=render 'layouts/nav_bar'%>
<h1>Add a new category!</h1>

<%= form_for @category do |f| %>

    <div class="form-group">
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :description %></p>
        <p><%= f.text_field :description %></p>
    </div>

    <%= f.submit "Add new category!" %>

<% end %>
